{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/.github/workflows/build-images.yml/"],
      "matchStrings": [
        "kula/node-rbenv:(?<currentValue>[\\d\\.]*)$",
        "kula/node-rbenv:(?<currentValue>[\\d\\.]*-slim)$"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "node"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/.github/workflows/build-images.yml/",
        "/Dockerfile/"
      ],
      "matchStrings": [
        "kula/node-rbenv:[\\d\\.]*-ruby(?<currentValue>[\\d\\.]*)$",
        "ENV RUBY_VERSION (?<currentValue>.*)$"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "ruby/ruby"
    }
  ]
}
